<nav class="navbar  navbar-expand-lg navbar-light bg-light navbar-custom">
  <%= link_to 'Blog', root_path, class: 'navbar-brand' %>

  <div class="collapse navbar-collapse container" id="navbarNav">
    <ul class="navbar-nav">
      <% if user_signed_in? %>
        <li class="nav-item">
          <span class="user-email">
            <%= current_user.email %>
          </span>
        </li>
        <br>
        <li class="nav-item d-flex align-items-center" style="margin-left: 10%;">
          <%= link_to t('posts.logout'), destroy_user_session_path, method: :delete, class: 'nav-link' %>
        </li>
      <% else %>
        <li class="nav-item d-flex align-items-center" style="margin-left: 10%;">
          <%= link_to t('posts.signup'), new_user_registration_path, class: 'nav-link' %>
        </li>

        <li class="nav-item d-flex align-items-center" style="margin-left: 10%;">
          <%= link_to t('posts.login'), new_user_session_path, class: 'nav-link' %>
        </li>
      <% end %>
    </ul>

    <div class="container" style="margin-left: 10%;"  >
      <li>
        <%= link_to "English", locale: 'en' %>
      </li>
      <li>
        <%= link_to "Русский", locale: 'ru' %>
      </li>
    </div>



    <div class="d-flex align-items-center" style="margin-left: 90%;">
      <%= form_with url: search_users_path, method: :get, class: "form-inline my-2 my-lg-0", local: true do %>
        <%= text_field_tag :email, nil, placeholder: t('navbar.search_email'), class: "form-control mr-sm-2" %>
        <%= submit_tag t('navbar.search'), class: "btn btn-secondary my-2 my-sm-0" %>
      <% end %>
    </div>
  </div>

  <div>
    <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
        <%= link_to t('navbar.new_post'), new_post_path, class: "btn btn-success mb-3" %>
      <% end %>

      <%= link_to t('navbar.all_posts'), posts_path, class: "btn btn-primary mb-3" %>

      <% if user_signed_in? %>
        <%= link_to t('navbar.my_posts'), posts_path(scope: 'my_posts'), class: "btn btn-primary mb-3" %>
      <% end %>
    </ul>
  </div>
</nav>