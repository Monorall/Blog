<h1><%= @post.title %></h1>
<p>Posted by <%= @post.user.email %></p>

<% @post.images.each do |image| %>
  <%= image_tag(image) %>
<% end %>

<p><%= @post.description %></p>

<% if current_user == @post.user %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>

<% if user_signed_in? && @post.user == current_user %>
  <%= link_to 'Delete Post', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p><%= comment.body %></p>
  <p><%= comment.user.email %></p>
  <% if comment.user == current_user %>
    <%= link_to 'Delete', post_comment_path(@post, comment), method: :delete, data: {confirm: 'Are you sure?'} %>
  <% end %>
<% end %>

<% if user_signed_in? %>
  <%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
      <%= f.label :body, "New comment" %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
<% else %>
  <p>You need to <%= link_to 'sign in', new_user_session_path %> to post a comment.</p>
<% end %>

<%= link_to 'Back', posts_path %>