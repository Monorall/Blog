<% if user_signed_in? %>
  <%= link_to 'New Post', new_post_path, class: "btn btn-success mb-3" %>
<% end %>

<%= link_to 'All Posts', posts_path, class: "btn btn-primary mb-3" %>

<% if user_signed_in? %>
  <%= link_to 'My Posts', posts_path, class: "btn btn-primary mb-3" %>
<% end %>

<div class="container">
  <div class="row justify-content-center">
    <% @posts.each do |post| %>
      <div class="col-md-8">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= link_to post.title, post %></h5>
            <p class="card-text"><%= post.description %></p>
            <p class="card-text"><small class="text-muted">Posted by <%= post.user.email %></small></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<%= paginate @posts %>